<view class="content">
    <!--头像姓名部分  -->
    <canvas canvas-id='myCanvas' style='background-color:#fff;width:100%;height:250rpx;'>
      <view class="container-top">
        <image src="{{userInfo.avatarUrl}}" class="userinfo-avatar"></image>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
    </canvas>
    
    <!-- 订单状态 -->
    <view class='container-orderBar marginTop30'>
      <text class='font-24 color-black-light container-orderBar-text'>待支付</text>
      <text class='font-24 color-black-light container-orderBar-text'>待发货</text>
      <text class='font-24 color-black-light container-orderBar-text'>待收货</text>
      <text class='font-24 color-black-light container-orderBar-text'>已完成</text>
      <text class='font-24 color-black-light container-orderBar-text'>全部</text>
    </view>
    <!-- 个人中心-功能模块 -->
    <view class='modular-Bar marginTop30'>
      <text class='font-24 color-black-light modular-orderBar-text border-bottom'>收货地址</text>
      <text class='font-24 color-black-light modular-orderBar-text border-bottom'>优惠券</text>
      <text class='font-24 color-black-light modular-orderBar-text border-bottom'>我的拼团</text>
      <text class='font-24 color-black-light modular-orderBar-text border-bottom'>邀请新人</text>
      <text class='font-24 color-black-light modular-orderBar-text'>实名认证</text>
      <text class='font-24 color-black-light modular-orderBar-text'>帮助中心</text>
      <text class='font-24 color-black-light modular-orderBar-text'>联系客服</text>
      <text class='font-24 color-black-light modular-orderBar-text'>退出</text>
    </view>
    <navigator url='../productDetail/productDetail'>跳转</navigator>
</view>